@model List<CategoryViewModel>
@{
    string active = ViewBag.SelectedCategoryId == null ? "active" : "";
}
<div class="list-group">
    <a asp-area="" asp-controller="Home" asp-action="Index" asp-route-id="" class="list-group-item list-group-item-action @active">Tümünü Göster</a>
    @foreach (var category in Model)
    {
        active = ViewBag.SelectedCategoryId == category.Id.ToString() ? "active" : "";
        <a 
            asp-area=""
            asp-controller="Home"
            asp-action="Index"
            asp-route-id="@category.Id"
         class="list-group-item list-group-item-action @active">@category.Name</a>
    }
</div>